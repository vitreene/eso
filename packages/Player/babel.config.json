{
  "presets": [
    "@babel/preset-env",
    "@babel/preset-typescript"
  ],
  "plugins": [
    [
      "@babel/plugin-proposal-decorators",
      {
        "legacy": true
      }
    ],
    [
      "@babel/plugin-proposal-class-properties",
      {
        "loose": true
      }
    ],
    [
      "@babel/plugin-transform-runtime"
    ],
    [
      "babel-plugin-transform-jsx-to-htm",
      {
        "tag": "$html"
      }
    ],
    [
      "sinuous/babel-plugin-htm",
      {
        "tag": "$html"
      }
    ]
  ],
  "parserOpts": {
    "plugins": [
      "dynamicImport"
    ]
  }
}