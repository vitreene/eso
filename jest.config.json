{
  "verbose": true,
  "collectCoverage": true,
  "coverageReporters": [
    "lcov",
    "json"
  ],
  "collectCoverageFrom": [
    "**/src/**"
  ],
  "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ]
}